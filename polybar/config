[global/wm]
margin-top = 0
margin-bottom = 0
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
compositing-background = over
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

[colors]
 background = #ee161113
 foreground = #deadbe
 icons = #161113
 alert = #bedead

##### bspwm

[bar/bspwm]
monitor = eDP1 
width = 100%
height = 20
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = ${colors.foreground}
wm-restack = bspwm
override-redirect = true
enable-ipc = true

###### Fonts
font-0 = "Hack Nerd Font:size=10;2"
font-1 = "Hack Nerd Font:size=13;2"
font-2 = "forkawesome:style=Regular:pixelsize=10;1"

modules-left = batteryleft bspwm xwindow
modules-center = mpd
modules-right = xbacklight pacu volume wireless-network timeIsRight

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-position = right
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-background = ${colors.background}
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

##### MODULE BSPWM

[module/bspwm]
type = internal/bspwm
enable-click = true
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-default = "n/a"

label-focused ="%icon% "
label-focused-background = ${colors.foreground}
label-focused-underline = ${colors.foreground}
label-focused-padding = 2 
label-focused-foreground = ${colors.icons} 
label-occupied = %icon%
label-occupied-padding = 2
label-occupied-foreground = ${colors.alert}
label-occupied-background = ${colors.background}
label-occupied-underline = ${colors.foreground}
label-urgent = %icon%
label-urgent-padding = 3
label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2
label-empty-underline =  ${colors.foreground}

##### Modules 
[module/batteryleft]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98
time-format = %H:%M
label-charging = "  %percentage%% "
label-discharging = "  %time% " 
label-full = "   "
format-charging = <label-charging>
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}
format-discharging-foreground = ${colors.foreground} 
format-discharging-background = ${colors.background}
format-charging-underline = ${colors.foreground}
format-discharging-underline = ${colors.foreground}
format-full-underline = ${colors.foreground}

[module/timeIsRight]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
date = "%d.%m.%y"
time = %H:%M
format-prefix = "   "
format-prefix-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.foreground}
label = "%date% %time% "

[module/mpd]
;https://github.com/jaagr/polybar/wiki/Module:-mpd
type = internal/mpd
host = 127.0.0.1
port = 6601
format-online = "<label-song> <bar-progress> <toggle> "
format-offline = "silence"
icon-play = 
icon-pause = 
label-song = %title% by %artist%
label-song-maxlen = 40
label-song-ellipsis = true
bar-progress-width = 5
bar-progress-indicator = •
bar-progress-fill = •
bar-progress-empty = •
bar-progress-empty-foreground = #423339
bar-progress-fill-foreground = ${colors.foreground}
bar-progress-fill-background = ${colors.background}
bar-progress-indicator-foreground = #f1dee5
format-online-foreground = ${colors.foreground}
format-online-background = ${colors.background}
format-online-underline =  ${colors.foreground}

[module/pacu]
type = custom/script
exec = pacman -Qu | wc -l
interval = 1000
label = " %output% "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.foreground}
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}

[module/volume]
;https://github.com/jaagr/polybar/wiki/Module:-volume
type = internal/alsa
format-volume = <label-volume>
label-volume = "   %percentage%% "
label-volume-foreground = ${colors.foreground}
label-volume-background = ${colors.background}
label-muted = "   "
format-volume-foreground = ${colors.foreground}
format-volume-background = ${colors.background}
format-muted-prefix-foreground = ${colors.foreground}
format-muted-foreground = ${colors.foreground}
format-muted-background = ${colors.background}
format-muted-underline = ${colors.foreground}
format-volume-underline = ${colors.foreground}

[module/wireless-network]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
interface = ${env:WIRELESS}
interval = 3.0
label-connected = "   " 
format-connected = <label-connected>
format-connected-foreground = ${colors.foreground} 
format-connected-background = ${colors.background} 
label-disconnected = " // " 
label-disconnected-foreground = ${colors.foreground}
label-disconnected-background = ${colors.background} 
format-connected-underline = ${colors.foreground}
format-disconnected-underline = ${colors.foreground}

[module/xbacklight]
;https://github.com/jaagr/polybar/wiki/Module:-xbacklight
type = internal/xbacklight
format = <label>
format-prefix = "   "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
label = %percentage%%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.foreground}


[module/xwindow]
;https://github.com/jaagr/polybar/wiki/Module:-xwindow
type = internal/xwindow

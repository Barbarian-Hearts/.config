format-muted-prefix-foreground = ${colors.background}
format-muted-foreground = ${colors.background}
format-muted-background = #ebcdd8

[module/wireless-network]
 ;https://github.com/jaagr/polybar/wiki/Module:-network
 type = internal/network
 interface = ${env:WIRELESS}
 interval = 3.0
 label-connected = %signal%%

 format-connected = <label-connected>
 format-connected-foreground = ${colors.background} 
 format-connected-background = #f1dee5
 format-connected-prefix = "  "
 format-connected-prefix-foreground = ${colors.background}
 format-connected-prefix-background = #f1dee5

 label-disconnected = %ifname% //
 label-disconnected-foreground = ${colors.background}
 label-disconnected-background = #f1dee5

[module/xbacklight]
;https://github.com/jaagr/polybar/wiki/Module:-xbacklight

[module/batteryleft]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98
time-format = %H:%M
label-charging = "  %percentage%% "
label-discharging = "  %time% " 
label-full = "[100%] "

format-charging = <label-charging>
format-charging-underline = ${colors.foreground}
format-charging-foreground = ${colors.foreground}
format-charging-background = ${colors.background}

format-discharging-foreground = ${colors.foreground} 
format-discharging-background = ${colors.background}

[module/timeIsRight]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
; Seconds to sleep between updates
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
;OLD date = " %a %d.%b.%y"
;OLD time = %H:%M
date = "%d.%m.%y"
time = %H:%M
format-prefix = "   "
format-prefix-foreground = ${colors.background}
format-foreground = ${colors.background}
format-background = #f8eef2
label = "%date% %time% "

[module/mpd]
;https://github.com/jaagr/polybar/wiki/Module:-mpd
type = internal/mpd
host = 127.0.0.1
port = 6601
format-online = "<label-song> <bar-progress> <toggle> "
format-offline = "silence"
icon-play = 
icon-pause = 
label-song = %title% by %artist%
label-song-maxlen = 40
label-song-ellipsis = true
bar-progress-width = 5
bar-progress-indicator = •
bar-progress-fill = •
bar-progress-empty = •
bar-progress-empty-foreground = #423339
bar-progress-fill-foreground = ${colors.foreground}
bar-progress-fill-background = ${colors.background}
bar-progress-indicator-foreground = #f1dee5
format-online-foreground = ${colors.foreground}
format-online-background = ${colors.background}

[module/pacu]
type = custom/script
exec = pacman -Qu | wc -l
interval = 1000
label = %output%
format-foreground = ${colors.background}
format-background = #e4bdcb
format-prefix = "  "
format-prefix-foreground = ${colors.background}
format-prefix-background = #e4bdcb

[module/volume]
;https://github.com/jaagr/polybar/wiki/Module:-volume
type = internal/alsa
;OLD format-volume = "<label-volume>  <bar-volume>"
format-volume = <label-volume>

label-volume = "  %percentage%%"
label-volume-foreground = #1a0a14
label-volume-background = #ebcdd8

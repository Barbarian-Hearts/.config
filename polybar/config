[global/wm]
margin-top = 0
margin-bottom = 0
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
compositing-background = over
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

[colors]
 bg = #52101010
 bga = ${xrdb:color7:#222}
 fg = ${xrdb:color1:#222}
 fga = ${xrdb:color7:#222}
 c1 = ${xrdb:color2:#222}
 c2 = ${xrdb:color4:#222}
 c3 = ${xrdb:color6:#222}

 

##### bspwm

[bar/bspwm]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 18
fixed-center = true
background = ${colors.bg}
foreground = ${colors.fg}
line-size = 4
wm-restack = bspwm
override-redirect = true
enable-ipc = true

###### Fonts
font-0 = "Hack Nerd Font:size=10;2"
font-1 = "Hack Nerd Font:size=13;2"
font-2 = "forkawesome:style=Regular:pixelsize=10;1"

modules-left = batteryleft sep mpd
modules-center = bspwm 
modules-right = xbacklight sep pacu sep volume sep  wireless-network sep reddit sep timeIsRight

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-position = right
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-underline = ${colors.fg}
tray-background = ${colors.bga}
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

##### MODULE BSPWM

[module/bspwm]
type = internal/bspwm
enable-click = true
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-default = "n/a"

format = <label-state>
label-focused ="%icon% "
label-focused-background = ${colors.c3}
label-focused-padding = 2
label-focused-foreground = ${colors.c2} 
label-occupied = %icon%
label-occupied-padding = 2
label-occupied-foreground = ${colors.c1}
label-occupied-background = ${colors.bga}
label-urgent = %icon%
label-urgent-padding = 2
label-empty = %icon%
label-empty-foreground = ${colors.fg}
label-empty-background = ${colors.bga}
label-empty-padding = 2
label-empty-underline =  ${colors.bga}
label-separator = |
label-separator-foreground = ${colors.fg}
label-separator-background = ${colors.bga}
format-underline = ${colors.bga}


##### Modules 

[module/sep]
type = custom/text
content = " | "
content-background = ${colors.bga}
content-foreground = ${colors.fg}
content-underline = ${colors.c3}

[module/batteryleft]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98
time-format = %H:%M
label-charging = "  %percentage%%"
label-discharging = "  %time%" 
label-full = "   "
format-charging = <label-charging>
format-charging-foreground = ${colors.fg}
format-charging-background = ${colors.bga}
format-discharging-foreground = ${colors.fg} 
format-discharging-background = ${colors.bga}
format-charging-underline = ${colors.c3}
format-discharging-underline = ${colors.c3}
format-full-underline = ${colors.c3}

[module/timeIsRight]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
date = "%d.%m.%y"
time = %H:%M
format-prefix = "   "
format-prefix-foreground = ${colors.fg}
format-foreground = ${colors.fg}
format-background = ${colors.bga}
format-underline = ${colors.c3}
label = "%date% %time% "

[module/mpd]
;https://github.com/jaagr/polybar/wiki/Module:-mpd
type = internal/mpd
host = 127.0.0.1
port = 6601
format-online = "<label-song> <bar-progress> <toggle> "
format-offline = "silence"
icon-play = " " 
icon-pause = " " 
label-song = %title% by %artist%
label-song-maxlen = 60
label-song-ellipsis = true
bar-progress-width = 5
bar-progress-indicator = •
bar-progress-fill = •
bar-progress-empty = •
format-online-underline = ${colors.c3}
format-online-background = ${colors.bga}
format-offline-underline = ${colors.c3}
bar-progress-empty-foreground = ${colors.c3}


[module/pacu]
type = custom/script
exec = pacman -Qu | wc -l
interval = 1000
label = " %output% "
format-foreground = ${colors.fg}
format-background = ${colors.bga}
format-underline = ${colors.c3}
format-prefix = "  "
format-prefix-foreground = ${colors.fg}
format-prefix-background = ${colors.bga}

[module/reddit]
type = custom/script
exec = ~/.config/polybar/scripts/notification-reddit.sh
intervall = 60
format-underline = ${colors.c3}
format-foreground = ${colors.fg}
format-background = ${colors.bga}

[module/volume]
;https://github.com/jaagr/polybar/wiki/Module:-volume
type = internal/alsa
format-volume = <label-volume>
label-volume = "   %percentage%% "
label-volume-foreground = ${colors.fg}
label-volume-background = ${colors.bga}
label-muted = "   "
format-volume-foreground = ${colors.fg}
format-volume-background = ${colors.bga}
format-muted-prefix-foreground = ${colors.fg}
format-muted-foreground = ${colors.fg}
format-muted-background = ${colors.bga}
format-muted-underline = ${colors.c3}
format-volume-underline = ${colors.c3}

[module/wireless-network]
;https://github.com/jaagr/polybar/wiki/Module:-network
type = internal/network
interface = ${env:WIRELESS}
interval = 3.0
label-connected = "   1 " 
format-connected = <label-connected>
format-connected-foreground = ${colors.fg} 
format-connected-background = ${colors.bga} 
label-disconnected = "   0 " 
label-disconnected-foreground = ${colors.fg}
label-disconnected-background = ${colors.bga} 
format-connected-underline = ${colors.c3}
format-disconnected-underline = ${colors.c3}

[module/xbacklight]
;https://github.com/jaagr/polybar/wiki/Module:-xbacklight
type = internal/xbacklight
format = <label>
format-prefix = "   "
format-prefix-foreground = ${colors.fg}
format-prefix-background = ${colors.bga}
label = %percentage%%
format-foreground = ${colors.fg}
format-background = ${colors.bga}
format-underline = ${colors.c3}

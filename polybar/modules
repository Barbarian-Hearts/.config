[module/bspwm]
type = internal/bspwm
enable-click = true
pin-workspaces = true

ws-icon-0 = 1;ﱡ
ws-icon-1 = 2;ﱡ
ws-icon-2 = 3;ﱡ
ws-icon-3 = 4;ﱡ
ws-icon-4 = 5;ﱡ
ws-icon-5 = 6;ﱡ
ws-icon-6 = 7;ﱡ
ws-icon-default = "n/a"

format = <label-state>
label-focused = "%{T3}ﱣ%{T-}"
label-focused-background = ${colors.bg1}
label-focused-padding = 2
label-focused-foreground = ${colors.c7}
label-occupied = ﱣ
label-occupied-padding = 2
label-occupied-foreground = ${colors.c2}
label-occupied-background = ${colors.bg1}
label-urgent = %icon%
label-urgent-padding = 2
label-empty = •
label-empty-foreground = ${colors.c4}
label-empty-background = ${colors.bg1}
label-empty-padding = 2


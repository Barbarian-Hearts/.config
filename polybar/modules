[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true

[module/batteryleft]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100
label-padding = 1
time-format = %H:%M
label-charging = "%percentage%%"
label-discharging = "%percentage%%"
format-charging-prefix = "  "
format-discharging-prefix = "  "
format-charging-foreground = ${colors.fg0}
format-charging-prefix-foreground = ${colors.c6}
format-charging-background = ${colors.bg1}
format-discharging-prefix-foreground = ${colors.c6}
format-discharging-foreground = ${colors.fg0} 
format-discharging-background = ${colors.bg1}

[module/timeIsRight]
;https://github.com/jaagr/polybar/wiki/Module:-date
type = internal/date
interval = 5
; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
date = "%d.%m.%y"
time = %H:%M
format-prefix = "  "
format-prefix-foreground = ${colors.c6}
format-foreground = ${colors.fg0}
format-background = ${colors.bg1}
label = "%time%"
label-padding = 1

[module/mpd]
;https://github.com/jaagr/polybar/wiki/Module:-mpd
type = internal/mpd
host = 127.0.0.1
port = 6601
format-online = " %{A1:mpc -p 6601 toggle:}%{A3:kitty --name=audio --title=audio --class=audio ncmpcpp -p 6601:} <label-song> <bar-progress>%{A}%{A} "
format-offline = "  And there was silence "
icon-play = " " 
icon-pause = " " 
label-song = %title% by %artist%
label-song-maxlen = 60
label-song-ellipsis = true
bar-progress-width = 10
bar-progress-indicator = •
bar-progress-fill = •
bar-progress-empty = •
format-online-background = ${colors.bg1}
format-offline-background = ${colors.bg1}
bar-progress-empty-foreground = ${colors.c4}
bar-progress-indicator-foreground = ${colors.c6}
bar-progress-fill-foreground = ${colors.c8}
label-padding = 1


[module/pacu]
type = custom/script
